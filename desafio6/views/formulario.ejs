<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carga de productos</title>
</head>
<body>
    <h1>Formulario de carga</h1>
    <form method="POST" action="/api/productos" id="productsForm">
        <div>
            <label for="producto">Producto:</label>
            <input type="text" id= "title " name="title" placeholder="Ingrese un producto" required>
        </div>
        <div>
            <label for="precio">Precio: </label>
            <input type="number" id="price" name="price" placeholder="Ingrese un precio" required>
        </div>
        <div>
            <label for="precio">Imagen: </label>
            <input type="text" id="img" name="img" placeholder="Ingrese una imagen" required>
        </div>
        <div>
            <input type="submit">
        </div>
    </form>
    <%- include ('productos.ejs') %>
    <%- include ('chat.ejs') %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../public/js/main.js"></script>
</body>
</html>